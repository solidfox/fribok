<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN" "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="PeriodHeader" resourceBundle="book">

    <!--- Declared parameters in the report. -->
    <parameter name="title"       class="java.lang.String"/>
    <parameter name="subtitle"    class="java.lang.String"/>
    <parameter name="company"     class="java.lang.String"/>
    <parameter name="lastvoucher" class="java.lang.Integer"/>
    <parameter name="reportdate"  class="java.util.Date"/>

    <parameter name="dateFrom"    class="java.lang.String"/>
    <parameter name="dateTo"      class="java.lang.String"/>

    <parameter name="periodTitle"   class="java.lang.String"/>
    <parameter name="periodText"    class="java.lang.String"/>


    <pageHeader>
        <band isSplitAllowed="false" height="85">

            <!-- title -->
            <textField>
                <reportElement x="80" y="12" width="395" height="30"/>
                <textElement textAlignment="Center">
                    <font size="20"></font>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$P{title}]]>
                </textFieldExpression>
            </textField>

            <!-- secondary title -->
            <textField isBlankWhenNull="true">
                <reportElement x="80" y="42" width="395" height="30"/>
                <textElement textAlignment="Center">
                    <font size="12"></font>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$P{subtitle}]]>
                </textFieldExpression>
            </textField>

            <!-- last voucher -->
            <textField isBlankWhenNull="true">
                <reportElement x="290" y="25" width="240" height="25"/>
                <textElement textAlignment="Right">
                    <font size="10"></font>
                </textElement>
                <textFieldExpression>
                    <![CDATA["Senaste verifikat: " + $P{lastvoucher}]]>
                </textFieldExpression>
            </textField>

            <!-- company name -->
            <textField>
                <reportElement x="20" y="0" width="455" height="14"/>
                <textElement textAlignment="Left">
                    <font size="10"></font>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$P{company}]]>
                </textFieldExpression>
            </textField>

            <!-- date period label -->
            <textField>
                <reportElement x="20" y="45" width="250" height="13">
                    <printWhenExpression>
                        <![CDATA[new Boolean($P{dateFrom} != null && $P{dateTo} != null)]]>
                    </printWhenExpression>
                </reportElement>

                <textElement textAlignment="Left">
                    <font size="10"></font>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$R{report.period.label} + " " + $P{dateFrom} + " " + $R{report.period.seperator} + " " + $P{dateTo}]]>
                </textFieldExpression>
            </textField>

            <!-- second periond label -->
            <textField >
                <reportElement x="20" y="60" width="250" height="13">
                    <printWhenExpression>
                        <![CDATA[new Boolean($P{periodTitle} != null && $P{periodText} != null)]]>
                    </printWhenExpression>
                </reportElement>

                <textElement textAlignment="Left">
                    <font size="10"></font>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$P{periodTitle} + " " + $P{periodText} ]]>
                </textFieldExpression>
            </textField>



            <!-- date of report -->
            <textField pattern="Short">
                <reportElement x="80" y="50" width="450" height="15"/>
                <textElement textAlignment="Right">
                    <font size="8"></font>
                </textElement>
                <textFieldExpression class="java.util.Date">
                    <![CDATA[$P{reportdate}]]>
                </textFieldExpression>
            </textField>

            <!-- page number-->
            <elementGroup>
                <textField evaluationTime="Report">
                    <reportElement x="365" y="65" width="100" height="15"/>
                    <textElement textAlignment="Right">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression class="java.lang.String">
                        <![CDATA[$R{report.page}]]>
                    </textFieldExpression>
                </textField>
                <textField evaluationTime="Now">
                    <reportElement x="465" y="65" width="25" height="15"/>
                    <textElement textAlignment="Right">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression class="java.lang.Integer">
                        <![CDATA[$V{PAGE_NUMBER}]]>
                    </textFieldExpression>
                </textField>
                <textField evaluationTime="Report">
                    <reportElement x="490" y="65" width="15" height="15"/>
                    <textElement textAlignment="Right">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression class="java.lang.String">
                        <![CDATA[$R{report.page.of}]]>
                    </textFieldExpression>
                </textField>
                <textField evaluationTime="Report">
                    <reportElement x="505" y="65" width="25" height="15"/>
                    <textElement textAlignment="Right">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression class="java.lang.Integer">
                        <![CDATA[$V{PAGE_NUMBER}]]>
                    </textFieldExpression>
                </textField>
            </elementGroup>

            <line>
                <reportElement x="20" y="84" width="510" height="1"/>
            </line>

        </band>
    </pageHeader>

</jasperReport>
