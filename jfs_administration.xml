  <patternset id="excluded.from.module.jfs_administration">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jfs_administration">
    <patternset refid="excluded.from.module.jfs_administration"/>
  </patternset>
  
  <path id="jfs_administration.module.sourcepath">
    <dirset dir="${module.jfs_administration.basedir}/../../../../home/ljo/bin/jfsbok/administration">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.jfs_administration" depends="compile.module.jfs_administration.production,compile.module.jfs_administration.tests" description="Compile module JFS Administration"/>
  
  <target name="compile.module.jfs_administration.production" description="Compile module JFS Administration; production classes">
    <mkdir dir="${jfs_administration.output.dir}"/>
    <javac2 destdir="${jfs_administration.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jfs_administration}/javac">
      <compilerarg line="${compiler.args.jfs_administration}"/>
      <bootclasspath refid="jfs_administration.module.bootclasspath"/>
      <classpath refid="jfs_administration.module.classpath"/>
      <src refid="jfs_administration.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.jfs_administration"/>
    </javac2>
    
    <copy todir="${jfs_administration.output.dir}">
      <fileset dir="${module.jfs_administration.basedir}/../../../../home/ljo/bin/jfsbok/administration/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.jfs_administration.tests" depends="compile.module.jfs_administration.production" description="compile module JFS Administration; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jfs_administration" description="cleanup module">
    <delete dir="${jfs_administration.output.dir}"/>
    <delete dir="${jfs_administration.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.jfs_administration" description="cleanup all"/>
  
  <target name="all" depends="init, clean, compile.module.jfs_administration" description="build all"/>
