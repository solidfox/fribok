<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN" "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="OrderRows">

    <parameter name="order.hasdiscount"     class="java.lang.Boolean"/>

    <field name="row.number"          class="java.lang.String"/>
    <field name="row.description"     class="java.lang.String"/>
    <field name="row.count"           class="java.lang.Integer"/>
    <field name="row.unit"            class="java.lang.String"/>
    <field name="row.unitprice"       class="java.math.BigDecimal"/>
    <field name="row.discount"        class="java.math.BigDecimal"/>
    <field name="row.sum"             class="java.math.BigDecimal"/>


    <columnHeader>
        <band height="16" isSplitAllowed="true">
            <line>
                <reportElement x="0" y="0" width="510" height="1"/>
                <graphicElement pen="Thin"/>
            </line>

            <line>
                <reportElement x="0" y="13" width="510" height="1"/>
                <graphicElement pen="Thin"/>
            </line>

            <!-- Product number -->
            <textField>
                <reportElement x="10" y="2" width="70" height="12"/>
                <textElement textAlignment="Left">
                    <font size="8"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$R{orderreport.column.1}]]>
                </textFieldExpression>
            </textField>


            <!-- Description -->
            <textField isBlankWhenNull="true">
                <reportElement x="80" y="2" width="90" height="12"/>
                <textElement textAlignment="Left">
                    <font size="8"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$R{orderreport.column.2}]]>
                </textFieldExpression>
            </textField>

            <!-- Unitprice -->
            <textField isBlankWhenNull="true">
                <reportElement x="250" y="2" width="70" height="12"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$R{orderreport.column.3}]]>
                </textFieldExpression>
            </textField>

            <!-- Count -->
            <textField isBlankWhenNull="true">
                <reportElement x="300" y="2" width="70" height="12"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$R{orderreport.column.4}]]>
                </textFieldExpression>
            </textField>

            <!-- Discount -->
            <textField isBlankWhenNull="true">
                <reportElement x="360" y="2" width="70" height="12">
                    <printWhenExpression>
                        <![CDATA[$P{order.hasdiscount}]]>
                    </printWhenExpression>
                </reportElement>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$R{orderreport.column.5}]]>
                </textFieldExpression>
            </textField>

            <!-- Sum -->
            <textField isBlankWhenNull="true">
                <reportElement x="450" y="2" width="50" height="12"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$R{orderreport.column.6}]]>
                </textFieldExpression>
            </textField>





        </band>
    </columnHeader>

    <detail>
        <band height="12" isSplitAllowed="true">

            <!-- Number -->
            <textField isBlankWhenNull="true">
                <reportElement x="10" y="0" width="70" height="12"/>
                <textElement>
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$F{row.number}]]>
                </textFieldExpression>
            </textField>

            <!-- Description -->
            <textField isBlankWhenNull="true">
                <reportElement x="80" y="0" width="250" height="12"/>
                <textElement>
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$F{row.description}]]>
                </textFieldExpression>
            </textField>


            <!-- Unitprice -->
            <textField isBlankWhenNull="true" pattern="#,##0.00">
                <reportElement x="250" y="0" width="70" height="12"/>
                <textElement textAlignment="Right">
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression class="java.math.BigDecimal">
                    <![CDATA[$F{row.unitprice}]]>
                </textFieldExpression>
            </textField>


            <!-- Count -->
            <textField isBlankWhenNull="true">
                <reportElement x="290" y="0" width="70" height="12"/>
                <textElement textAlignment="Right">
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression class="java.lang.Integer">
                    <![CDATA[$F{row.count}]]>
                </textFieldExpression>
            </textField>

            <!-- Unit -->
            <textField isBlankWhenNull="true">
                <reportElement x="362" y="0" width="18" height="12"/>
                <textElement textAlignment="Left">
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$F{row.unit}]]>
                </textFieldExpression>
            </textField>


            <!-- Discount -->
            <textField isBlankWhenNull="true" pattern="#,##0.00">
                <reportElement x="360" y="0" width="70" height="12"/>
                <textElement textAlignment="Right">
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression class="java.math.BigDecimal">
                    <![CDATA[$F{row.discount} ]]>
                </textFieldExpression>
            </textField>

            <!-- % -->
            <textField isBlankWhenNull="true">
                <reportElement x="432" y="0" width="10" height="12"/>
                <textElement textAlignment="Left">
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression >
                    <![CDATA[$F{row.discount} == null ? null : new String("%") ]]>
                </textFieldExpression>
            </textField>


            <!-- Row sum  -->
            <textField isBlankWhenNull="true" pattern="#,##0.00">
                <reportElement x="450" y="0" width="50" height="12"/>
                <textElement textAlignment="Right">
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression class="java.math.BigDecimal">
                    <![CDATA[$F{row.sum} ]]>
                </textFieldExpression>
            </textField>



        </band>
    </detail>

    <pageFooter>
        <band height="13">
            <!-- Number -->
            <textField>
                <reportElement x="0" y="0" width="510" height="13"/>

                <box bottomBorder="Thin" borderColor="#000000" />

                <textElement textAlignment="Right" verticalAlignment="Bottom">
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$R{orderreport.continuing}]]>
                </textFieldExpression>
            </textField>

        </band>
    </pageFooter>

    <lastPageFooter>
        <band height="0">
        </band>
    </lastPageFooter>

</jasperReport>
