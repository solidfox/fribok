<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="PurchaseOrderList" resourceBundle="book">

    <parameter name="Report"     class="net.sf.jasperreports.engine.JasperReport"/>
    <parameter name="Parameters" class="java.util.HashMap"/>


    <!-- Declared fields in the report. -->

    <field name="order.number"       class="java.lang.Integer"/>
    <field name="order.suppliernr"   class="java.lang.String"/>
    <field name="order.suppliername" class="java.lang.String"/>
    <field name="order.date"         class="java.lang.String"/>
    <field name="order.currency"      class="java.lang.String"/>
    <field name="order.sum"          	class="java.math.BigDecimal"/>

    <field name="order.rows"  class="net.sf.jasperreports.engine.JRDataSource"/>

    <!-- The sum. -->
    <variable name="sum" class="java.math.BigDecimal"  resetType="Report" calculation="Sum">
        <variableExpression>
            <![CDATA[$F{order.sum}]]>
        </variableExpression>
        <initialValueExpression>
            <![CDATA[new BigDecimal(0.0)]]>
        </initialValueExpression>
    </variable>

    <columnHeader>
        <band height="30">
            <line>
                <reportElement x="20" y="23" width="510" height="1"/>
            </line>

            <!-- Column 1 -->
            <textField>
                <reportElement x="20" y="0" width="80" height="24" />
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$R{purchaseorderlistreport.column.1}]]>
                </textFieldExpression>
            </textField>

            <textField>
                <reportElement x="80" y="0" width="70" height="24" />
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$R{purchaseorderlistreport.column.2}]]>
                </textFieldExpression>
            </textField>

            <textField>
                <reportElement x="140" y="0" width="80" height="24" />
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$R{purchaseorderlistreport.column.3}]]>
                </textFieldExpression>
            </textField>

            <textField>
                <reportElement x="250" y="0" width="90" height="24" />
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$R{purchaseorderlistreport.column.4}]]>
                </textFieldExpression>
            </textField>

            <textField>
                <reportElement x="320" y="0" width="70" height="24" />
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$R{purchaseorderlistreport.column.5}]]>
                </textFieldExpression>
            </textField>


            <textField>
                <reportElement x="380" y="0" width="70" height="24" />
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$R{purchaseorderlistreport.column.6}]]>
                </textFieldExpression>
            </textField>


            <textField>
                <reportElement x="480" y="0" width="50" height="24" />
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$R{purchaseorderlistreport.column.7}]]>
                </textFieldExpression>
            </textField>


        </band>
    </columnHeader>


    <detail>
        <band height="30" isSplitAllowed="true">


            <!-- Title -->
            <textField>
                <reportElement x="20" y="0" width="30" height="14"/>
                <textElement>
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression class="java.lang.Integer">
                    <![CDATA[$F{order.number}]]>
                </textFieldExpression>
            </textField>

            <!-- Customer nr -->
            <textField>
                <reportElement x="80" y="0" width="200" height="14"/>
                <textElement>
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$F{order.suppliernr}]]>
                </textFieldExpression>
            </textField>

            <!-- Customer name -->
            <textField>
                <reportElement x="140" y="0" width="200" height="14"/>
                <textElement>
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$F{order.suppliername}]]>
                </textFieldExpression>
            </textField>

            <!-- Currency -->
            <textField isBlankWhenNull="true">
                <reportElement x="380" y="0" width="70" height="24" />
                <textElement textAlignment="Right">
                    <font size="8"  isBold="true"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$F{order.currency}]]>
                </textFieldExpression>
            </textField>

            <!-- Date -->
            <textField>
                <reportElement x="470" y="0" width="60" height="14"/>
                <textElement textAlignment="Right">
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$F{order.date}]]>
                </textFieldExpression>
            </textField>
            <!--
     <line>
        <reportElement x="80" y="12" width="450" height="1"/>
         <graphicElement pen="Dotted"/>
    </line>
            -->


            <!-- Order rows -->
            <subreport isUsingCache="false">
                <reportElement x="20" y="12" width="555" height="0" isPrintWhenDetailOverflows="true"/>

                <subreportParameter name="order.number">
                    <subreportParameterExpression>
                        <![CDATA[$F{order.number}]]>
                    </subreportParameterExpression>
                </subreportParameter>

                <dataSourceExpression>
                    <![CDATA[$F{order.rows}]]>
                </dataSourceExpression>

                <subreportExpression class="net.sf.jasperreports.engine.JasperReport">
                    <![CDATA[$P{Report}]]>
                </subreportExpression>


            </subreport>


        </band>
    </detail>

    <summary>
        <band height="20">

            <rectangle>
                <reportElement x="20" y="0" width="510" height="2" backcolor="#000000"/>
                <graphicElement pen="None" fill="Solid"/>
            </rectangle>

            <textField>
                <reportElement x="20" y="2" width="250" height="14"/>
                <textElement>
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$R{inpaymentlistreport.sum}]]>
                </textFieldExpression>
            </textField>


            <!-- Total sum-->
            <textField pattern="#,##0.00" isBlankWhenNull="true">
                <reportElement x="450" y="2" width="80" height="14"/>

                <textElement textAlignment="Right">
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression class="java.math.BigDecimal">
                    <![CDATA[$V{sum}]]>
                </textFieldExpression>
            </textField>
        </band>
    </summary>
    
</jasperReport>