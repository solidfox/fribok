<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN" "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="Invoice">
    <!--- Declared parameters in the report. -->
    <parameter name="title"      class="java.lang.String"/>

    <!--- Declared parameters in the report. -->

    <parameter name="number"    class="java.lang.String"/>
    <parameter name="date"      class="java.lang.String"/>
    <parameter name="quater"      class="java.lang.String"/>

    <parameter name="company.logo"       class="java.awt.Image"/>

    <parameter name="company.name"      class="java.lang.String"/>
    <parameter name="company.address1"  class="java.lang.String"/>
    <parameter name="company.address2"  class="java.lang.String"/>
    <parameter name="company.zipcode"   class="java.lang.String"/>
    <parameter name="company.city"      class="java.lang.String"/>
    <parameter name="company.country"   class="java.lang.String"/>
    <parameter name="company.phone"     class="java.lang.String"/>
    <parameter name="company.telefax"   class="java.lang.String"/>
    <parameter name="company.residence" class="java.lang.String"/>
    <parameter name="company.email"     class="java.lang.String"/>
    <parameter name="company.homepage"  class="java.lang.String"/>

    <parameter name="company.plusaccount"  class="java.lang.String"/>
    <parameter name="company.bankaccount"  class="java.lang.String"/>

    <parameter name="company.bic"   class="java.lang.String"/>
    <parameter name="company.iban"  class="java.lang.String"/>
    <parameter name="company.bank"  class="java.lang.String"/>

    <field name="customer.number"     class="java.lang.String"/>
    <field name="customer.name"       class="java.lang.String"/>
    <field name="customer.vatnumber"  class="java.lang.String"/>
    <field name="customer.eusalecommodity"                class="java.math.BigDecimal"/>
    <field name="customer.eusalethirdpartcommodity"       class="java.math.BigDecimal"/>


    <variable name="eusalecommodity.sum" class="java.math.BigDecimal" resetType="Report" calculation="Sum">
        <variableExpression>
            <![CDATA[$F{customer.eusalecommodity}]]>
        </variableExpression>
        <initialValueExpression>
            <![CDATA[new BigDecimal(0.0)]]>
        </initialValueExpression>
    </variable>

    <variable name="eusalethirdpartcommodity.sum" class="java.math.BigDecimal" resetType="Report" calculation="Sum">
        <variableExpression>
            <![CDATA[$F{customer.eusalethirdpartcommodity}]]>
        </variableExpression>
        <initialValueExpression>
            <![CDATA[new BigDecimal(0.0)]]>
        </initialValueExpression>
    </variable>

    <pageHeader>
        <band isSplitAllowed="false" height="80">

            <!-- Logo -->
            <image onErrorType="Icon">
                <reportElement x="20" y="0" width="180" height="55"/>

                <imageExpression class="java.awt.Image">
                    <![CDATA[$P{company.logo}]]>
                </imageExpression>
            </image>

            <!-- Title -->
            <textField isBlankWhenNull="true">
                <reportElement x="300" y="0" width="230" height="20"/>
                <textElement textAlignment="Right">
                    <font fontName="Arial" size="16" isBold="true" pdfFontName="Helvetica"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$P{title}]]>
                </textFieldExpression>
            </textField>

            <!-- Number and date frame -->
            <frame>
                <reportElement x="230" y="20" width="300" height="25"/>

                <box border="1Point" borderColor="#000000"/>

                <!-- Number text -->
                <textField isBlankWhenNull="true">
                    <reportElement x="5" y="1" width="140" height="12"/>
                    <textElement textAlignment="Left">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$R{quarterreport.title.date}]]>
                    </textFieldExpression>
                </textField>

                <!-- Number -->
                <textField isBlankWhenNull="true">
                    <reportElement x="5" y="11" width="140" height="14"/>
                    <textElement textAlignment="Right">
                        <font size="10"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$P{date}]]>
                    </textFieldExpression>
                </textField>


                <!-- Separator -->
                <line>
                    <reportElement x="150" y="0" width="1" height="25"/>
                </line>

                <!-- Date text -->
                <textField isBlankWhenNull="true">
                    <reportElement x="155" y="1" width="140" height="12"/>
                    <textElement textAlignment="Left">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$R{quarterreport.title.number}]]>
                    </textFieldExpression>
                </textField>

                <!-- Date -->
                <textField isBlankWhenNull="true">
                    <reportElement x="155" y="11" width="140" height="14"/>
                    <textElement textAlignment="Right">
                        <font size="10"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$P{number}]]>
                    </textFieldExpression>
                </textField>

            </frame>


            <!-- Quater code -->
            <frame>
                <reportElement x="430" y="50" width="100" height="25"/>

                <box border="1Point" borderColor="#000000"/>

                <!-- Number text -->
                <textField isBlankWhenNull="true">
                    <reportElement x="5" y="1" width="90" height="12"/>
                    <textElement textAlignment="Left">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$R{quarterreport.title.quater}]]>
                    </textFieldExpression>
                </textField>

                <!-- Number -->
                <textField isBlankWhenNull="true">
                    <reportElement x="5" y="11" width="90" height="14"/>
                    <textElement textAlignment="Right">
                        <font size="10"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$P{quater}]]>
                    </textFieldExpression>
                </textField>

            </frame>

        </band>
    </pageHeader>


    <columnHeader>
        <band isSplitAllowed="false" height="110">

            <!-- company adress frame -->
            <frame>
                <reportElement x="280" y="0" width="250" height="86"/>

                <box border="1Point" borderColor="#000000"/>

                <!-- Adress text -->
                <textField isBlankWhenNull="true">
                    <reportElement x="5" y="2" width="240" height="14"/>
                    <textElement textAlignment="Left">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$R{quaterreport.address}]]>
                    </textFieldExpression>
                </textField>

                <!-- Name -->
                <textField isBlankWhenNull="true">
                    <reportElement x="10" y="14" width="240" height="14"/>
                    <textElement textAlignment="Left">
                        <font size="10"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$P{company.name}]]>
                    </textFieldExpression>
                </textField>

                <!-- Address 1 -->
                <textField isBlankWhenNull="true">
                    <reportElement x="10" y="28" width="240" height="14"/>
                    <textElement textAlignment="Left">
                        <font size="10"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$P{company.address1}]]>
                    </textFieldExpression>
                </textField>

                <!-- Address 2 -->
                <textField isBlankWhenNull="true">
                    <reportElement x="10" y="42" width="240" height="14"/>
                    <textElement textAlignment="Left">
                        <font size="10"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$P{company.address2}]]>
                    </textFieldExpression>
                </textField>

                <!-- Zip Code + City -->
                <textField isBlankWhenNull="true">
                    <reportElement x="10" y="56" width="240" height="14"/>
                    <textElement textAlignment="Left">
                        <font size="10"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$P{company.zipcode} + " " + $P{company.city}]]>
                    </textFieldExpression>
                </textField>

                <!-- Country -->
                <textField isBlankWhenNull="true">
                    <reportElement x="10" y="70" width="240" height="14"/>
                    <textElement textAlignment="Left">
                        <font size="10"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$P{company.country}]]>
                    </textFieldExpression>
                </textField>

            </frame>

            <frame>
                <reportElement x="0" y="95" width="530" height="15"/>

                <line>
                    <reportElement x="20" y="0" width="510" height="1"/>
                </line>


                <line>
                    <reportElement x="20" y="12" width="510" height="1"/>
                </line>

                <!-- Vat number -->
                <textField>
                    <reportElement x="20" y="2" width="140" height="12"/>
                    <textElement textAlignment="Left">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$R{quaterreport.column.1}]]>
                    </textFieldExpression>
                </textField>


                <!-- Customer nr -->
                <textField isBlankWhenNull="true">
                    <reportElement x="160" y="2" width="60" height="12"/>
                    <textElement textAlignment="Left">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$R{quaterreport.column.2}]]>
                    </textFieldExpression>
                </textField>

                <!-- Customer name -->
                <textField isBlankWhenNull="true">
                    <reportElement x="220" y="2" width="110" height="12"/>
                    <textElement textAlignment="Left">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$R{quaterreport.column.3}]]>
                    </textFieldExpression>
                </textField>


                <!-- Discount -->
                <textField isBlankWhenNull="true">
                    <reportElement x="330" y="2" width="100" height="12"/>
                    <textElement textAlignment="Right">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$R{quaterreport.column.4}]]>
                    </textFieldExpression>
                </textField>

                <!-- Sum -->
                <textField isBlankWhenNull="true">
                    <reportElement x="430" y="2" width="100" height="12"/>
                    <textElement textAlignment="Right">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression>
                        <![CDATA[$R{quaterreport.column.5}]]>
                    </textFieldExpression>
                </textField>
            </frame>


        </band>
    </columnHeader>


    <detail>
        <band isSplitAllowed="true" height="14">
            <printWhenExpression>
                <![CDATA[new Boolean($F{customer.eusalecommodity}.signum() != 0 || $F{customer.eusalethirdpartcommodity}.signum() != 0 ) ]]>
            </printWhenExpression>

            <!-- Customer VAT-Number -->
            <textField isBlankWhenNull="true">
                <reportElement x="20" y="0" width="140" height="12"/>
                <textElement>
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$F{customer.vatnumber}]]>
                </textFieldExpression>
            </textField>

            <!-- Customer number -->
            <textField isBlankWhenNull="true">
                <reportElement x="160" y="0" width="60" height="12"/>
                <textElement>
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$F{customer.number}]]>
                </textFieldExpression>
            </textField>


            <!-- Customer name -->
            <textField isBlankWhenNull="true">
                <reportElement x="220" y="0" width="110" height="12"/>
                <textElement textAlignment="Left">
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$F{customer.name}]]>
                </textFieldExpression>
            </textField>


            <!-- EU Sale Commudity -->
            <textField pattern="#,##0"  isBlankWhenNull="true">
                <reportElement x="330" y="0" width="100" height="12"/>
                <textElement textAlignment="Right">
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression class="java.math.BigDecimal">
                    <![CDATA[$F{customer.eusalecommodity}]]>
                </textFieldExpression>
            </textField>




            <!-- EU Sale Thirdpart Commodity -->
            <textField pattern="#,##0"  isBlankWhenNull="true">
                <reportElement x="430" y="0" width="100" height="12"/>
                <textElement textAlignment="Right">
                    <font size="8" isBold="false"/>
                </textElement>
                <textFieldExpression class="java.math.BigDecimal">
                    <![CDATA[$F{customer.eusalethirdpartcommodity} ]]>
                </textFieldExpression>
            </textField>



        </band>
    </detail>

    <pageFooter>
        <band height="16">
            <!-- page number-->
            <elementGroup>
                <textField evaluationTime="Report">
                    <reportElement x="365" y="0" width="100" height="15"/>
                    <textElement textAlignment="Right">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression class="java.lang.String">
                        <![CDATA[$R{quaterreport.page}]]>
                    </textFieldExpression>
                </textField>
                <textField evaluationTime="Now">
                    <reportElement x="465" y="0" width="25" height="15"/>
                    <textElement textAlignment="Right">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression class="java.lang.Integer">
                        <![CDATA[$V{PAGE_NUMBER}]]>
                    </textFieldExpression>
                </textField>
                <textField evaluationTime="Report">
                    <reportElement x="490" y="0" width="15" height="15"/>
                    <textElement textAlignment="Right">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression class="java.lang.String">
                        <![CDATA[$R{quaterreport.page.of}]]>
                    </textFieldExpression>
                </textField>
                <textField evaluationTime="Report">
                    <reportElement x="505" y="0" width="25" height="15"/>
                    <textElement textAlignment="Right">
                        <font size="8"/>
                    </textElement>
                    <textFieldExpression class="java.lang.Integer">
                        <![CDATA[$V{PAGE_NUMBER}]]>
                    </textFieldExpression>
                </textField>
            </elementGroup>
        </band>
    </pageFooter>

    <summary>
        <band height="16">

            <rectangle>
                <reportElement x="20" y="0" width="510" height="2" backcolor="#000000"/>
                <graphicElement pen="None" fill="Solid"/>
            </rectangle>

            <textField>
                <reportElement x="20" y="2" width="100" height="14"/>
                <textElement textAlignment="Left">
                    <font size="10"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$R{quaterreport.sum}]]>
                </textFieldExpression>
            </textField>

            <textField pattern="#,##0" isBlankWhenNull="true">
                <reportElement x="330" y="2" width="100" height="14"/>
                <textElement textAlignment="Right">
                    <font size="10"/>
                </textElement>
                <textFieldExpression class="java.math.BigDecimal">
                    <![CDATA[$V{eusalecommodity.sum}]]>
                </textFieldExpression>
            </textField>

            <textField pattern="#,##0" isBlankWhenNull="true">
                <reportElement x="430" y="2" width="100" height="14"/>
                <textElement textAlignment="Right">
                    <font size="10"/>
                </textElement>
                <textFieldExpression class="java.math.BigDecimal">
                    <![CDATA[$V{eusalethirdpartcommodity.sum}]]>
                </textFieldExpression>
            </textField>
        </band>
    </summary>

</jasperReport>
